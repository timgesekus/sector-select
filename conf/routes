# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.login()
GET     /joinSession/:sessionId     controllers.JoinSession.joinSession(sessionId: Int)
GET     /joinSessionWS/:sessionId   @controllers.JoinSession.joinSessionWS(sessionId: Int)
GET     /login                      controllers.Application.login()
GET     /logout                     controllers.Application.logout()
GET     /exerciseSelect             controllers.ExerciseSelection.exerciseSelect()
GET     /groups                     @controllers.ExerciseSelection.groups()

POST    /loginSubmit/               controllers.Application.loginSubmit()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
